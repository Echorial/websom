{
	"name": "coreModule",
	"id": "coreModule",
	"version": "1.0",
	"author": "Websom",
	"license": "MIT",
	"repo": "url",
	"website": "https://echorial.com",
	"supports": {
		"javascript": "*",
		"php": "*"
	},
	"npm": {
		"lokijs": "1.5.8",
		"@sendgrid/mail": "*"
	},
	"composer": {

	},
	"resources": [
		{
			"path": "./views"
		},
		{
			"path": "./scripts"
		}
	],
	"adapters": {
		"loki": {
			"type": "database",
			"supports": {
				"javascript": true,
				"php": false
			},
			"class": "CoreModule.LokiDB"
		},
		"sendGrid": {
			"type": "email",
			"supports": {
				"javascript": true,
				"php": true
			},
			"class": "CoreModule.SendGrid"
		},
		"reCaptcha": {
			"type": "captcha",
			"supports": {
				"javascript": true,
				"php": true
			},
			"class": "CoreModule.reCaptcha"
		}
	},
	"config": {
		"root": {

		},
		"adapter.database.loki": {
			"persistence": {
				"name": "Database File (Persistence)",
				"type": "string",
				"helper": "path",
				"default": ""
			}
		},
		"adapter.email.sendGrid": {
			"apiKey": {
				"name": "Send grid api key",
				"type": "string",
				"default": ""
			}
		},
		"security.captcha": {
			"background": {
				"name": "Background",
				"type": "boolean",
				"description": "Should Websom always run captcha services in the background.",
				"default": false,
				"public": true
			}
		},
		"adapter.captcha.reCaptcha": {
			"clientKey": {
				"name": "reCaptcha v3 client key",
				"type": "string",
				"default": "",
				"public": true
			},
			"secretKey": {
				"name": "reCaptcha v3 secret key",
				"type": "string",
				"default": ""
			}
		},
		"adapter.core.confirmation": {
			"fromEmail": {
				"name": "The email address to use when sending email confirmations.",
				"type": "string",
				"default": ""
			},
			"fromNumber": {
				"name": "The phone number to use when sending SMS confirmations.",
				"type": "string",
				"default": ""
			}
		}
	}
}