info {
	"name": "nav-item",
	"type": "component"
}

template {
	<component @open-mobile-nav="$emit('open-mobile-nav')" @close-mobile-nav="$emit('close-mobile-nav')" v-if="item.type == 'component'" :is="item.component" v-bind="item.props || {}"/>
	<router-link v-else-if="item.type == 'link'" class="nav-item" :class="(item.color || 'primary') + ' ' + (item.class || '') + ' ' + sizingClass" :id="item.id" :to="item.href" @click.native="menuClick">
		<img v-if="item.image" class="nav-image" :src="websom.resolveString(item.image)" /> {{item.title || ""}}
	</router-link>
}

script {
	export default {
		props: {
			item: {
				type: Object,
				default: () => ({
					type: "link",
					title: "Home",
					href: "/"
				})
			},
			mobile: {
				type: Boolean,
				default: false
			}
		},
		computed: {
			sizingClass() {
				return this.mobile ? "" : (this.item.sizing || "hide-on-small")
			}
		},
		methods: {
			menuClick() {
				if (this.mobile) {
					this.$emit("close-mobile-nav", true);
				}
			}
		}
	}
}

style {
	.nav-item {
		min-width: calc(var(--base-size) * 5);
		
		display: flex;
		justify-content: center;
		align-items: center;

		cursor: pointer;

		background: var(--color);
		color: var(--contrast);

		&:hover {
			background: var(--color-light);
			color: var(--contrast-light);
		}

		&:active {
			background: var(--color-dark);
			color: var(--contrast-dark);
		}
	}

	.nav-image {
		max-width: 64px;
		margin: 0 12px;
	}
}